<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <Button
                android:id="@+id/parcial_checkout_button"
                style="@style/PrimaryActionButton"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:padding="20dp"
                android:text="Pagamento parcial"
                android:textColor="#FFF"
                tools:layout_editor_absoluteX="145dp"
                tools:layout_editor_absoluteY="233dp" />

            <Button
                android:id="@+id/checkout_button"
                style="@style/PrimaryActionButton"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:padding="20dp"
                android:text="Pagamento Valor"
                android:textColor="#FFF"
                tools:layout_editor_absoluteX="145dp"
                tools:layout_editor_absoluteY="233dp" />

            <Button
                android:id="@+id/payment_type_checkout_button"
                style="@style/PrimaryActionButton"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:padding="20dp"
                android:text="Pagamento Direto"
                android:textColor="#FFF"
                tools:layout_editor_absoluteX="145dp"
                tools:layout_editor_absoluteY="233dp" />

            <Button
                android:id="@+id/successive_payment_type_checkout_button"
                style="@style/PrimaryActionButton"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:padding="20dp"
                android:text="Pagamento Parcelado"
                android:textColor="#FFF"
                tools:layout_editor_absoluteX="145dp"
                tools:layout_editor_absoluteY="233dp" />

            <Button
                android:id="@+id/list_orders_button"
                style="@style/PrimaryActionButton"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:padding="20dp"
                android:text="Listagem de Ordens"
                android:textColor="#FFF"
                tools:layout_editor_absoluteX="145dp"
                tools:layout_editor_absoluteY="233dp" />

            <Button
                android:id="@+id/cancel_payment_button"
                style="@style/PrimaryActionButton"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:padding="20dp"
                android:text="Cancelar Pagamento"
                android:textColor="#FFF"
                tools:layout_editor_absoluteX="145dp"
                tools:layout_editor_absoluteY="233dp" />

        </LinearLayout>

    </ScrollView>
</LinearLayout>
