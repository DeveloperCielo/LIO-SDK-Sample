<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_gravity="left"
        android:text="@string/select_option"
        android:textSize="16sp"
        android:textStyle="bold" />

    <View
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black_alpha19"/>

    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <Button
                android:id="@+id/parcial_checkout_button"
                style="@style/PrimaryActionButton"
                android:text="@string/partial_payment" />

            <Button
                android:id="@+id/checkout_button"
                style="@style/PrimaryActionButton"
                android:text="@string/value_payment" />

            <Button
                android:id="@+id/payment_type_checkout_button"
                style="@style/PrimaryActionButton"
                android:text="@string/direct_payment" />

            <Button
                android:id="@+id/successive_payment_type_checkout_button"
                style="@style/PrimaryActionButton"
                android:text="@string/successive_payment" />

            <Button
                android:id="@+id/list_orders_button"
                style="@style/PrimaryActionButton"
                android:text="@string/orders_list" />

            <Button
                android:id="@+id/cancel_payment_button"
                style="@style/PrimaryActionButton"
                android:text="@string/cancel_payment" />

        </LinearLayout>

    </ScrollView>
</LinearLayout>
