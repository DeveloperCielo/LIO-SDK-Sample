<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txt_order_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:gravity="center"
        android:text="@string/cancel_payment_title"
        android:textSize="18sp"
        android:textStyle="bold" />

    <View
        android:layout_below="@id/txt_order_details"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black_alpha19" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btn_cancel_payment"
        android:layout_below="@+id/txt_order_details"
        android:layout_centerInParent="true"/>

    <View
        android:layout_below="@id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black_alpha19" />

    <Button
        android:id="@+id/btn_cancel_payment"
        style="@style/PrimaryActionButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:text="Cancelar Pagamento" />

</RelativeLayout>
